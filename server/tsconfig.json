{
  "compilerOptions": {
    /* Базові налаштування */
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    /* Налаштування для Node.js та сумісності */
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,

    /* Суворість та якість коду */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    /* Шляхи */
    "rootDir": "src",
    "outDir": "dist"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}